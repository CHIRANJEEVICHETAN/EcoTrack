{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "jsx": "react",
      "typeRoots": [
      "./node_modules/@types",
      "./src/types"
      ]
    },
    "include": ["src/**/*", "types/**/*"],
    "exclude": ["node_modules"]
  }