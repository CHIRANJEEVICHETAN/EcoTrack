{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "jsx": "react"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }